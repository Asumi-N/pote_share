<div class="container-room">
 <div class="room-show-about">
  <div class="room-show-about-image">
   <%= image_tag @room.image %>
  </div>
  <div class="room-show-detail">
   <div class="room-show-detail-icon">
    <a href="/">
     <img class="host-icon" src="https://presite-potepancamp-rails-02.herokuapp.com/assets/default_icon.jpg">
    </a>
   </div>
   <div class="room-show-profile">
    <p class="room-show-name"><%= @room.name %></p>
    <p class="room-show-address"><%= @room.address %></p>
   </div>
  </div>
  <p class="room-show-introduce">
   <%= @room.introduce %>
  </p>
 </div>

 <div class="room-show-nav">
  <h5 class="price-icon">
   ¥<%= @room.price %>/日
  </h5>
  <div class="room-show-date-select">
   <%= form_with model: @reservation, method: :get, url: new_reservation_path do |f| %>
    <% if user_signed_in? %>
     <%= f.hidden_field :room_id, value: @room.id %>
     <%= f.hidden_field :user_id, value: current_user.id %>
    <% end %>

   <%= f.label :start,"開始日" %><br>
   <%= f.date_field :start %><br>
   <%= f.label :end,"終了日" %><br>
   <%= f.date_field :end %><br>
   <%= f.label :number,"人数" %><br>
   <%= f.number_field :number %><br>

  </div>
  <div class="room-show-date-submit">
   <% if user_signed_in? %>
    <%= f.submit"予約する"%>
   <% else %>
    <button class="room-show-login"><%= link_to "ログイン","new_user_session_path"%></button>
   <% end %>

   <% end %>
  </div>
 </div>
</div> 
 